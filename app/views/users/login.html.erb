<h1>ログイン</h1>

<%= form_for @user, :url => {:action => 'send_login'} do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    </br>
    <%= f.label :password %>
    <%= f.text_field :password %>
    </br>
    <%= f.submit 'ログイン', class: 'button' %>
    </br>
    <%= link_to '戻る', :back %>
<% end %>