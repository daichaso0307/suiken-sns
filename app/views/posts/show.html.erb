<h3><%= @detail.title %></h3>
<p><%= @detail.user_name %></p>
<p><%= @detail.content %></p>

<% @comments.each do |comment| %>
    <h5><%= comment.user.name %></h5>
    <p><%= comment.content %></p>
<% end %>


<% favorite = Follow.find_by(user_id: @login_user.id, following_user_id: @detail.user_id) %>
<% if favorite.nil? %>
    <%= button_to 'いいね', controller: 'favorites', params: {user_id: @login_user.id, following_user_id: @detail.user_id} %>
<% else %>
    <%= button_to 'いいねを取り消す', follow_path(favorite.id), method: :delete %>
<% end %>
<%= button_to '詳細', new_post_comment_path(@detail.id) %>
<%= button_to '削除', post_path(params[:id]), method: :delete, data: { confirm: "この投稿を削除しますか？" } %>
</br>
<%= link_to '戻る', :back %>