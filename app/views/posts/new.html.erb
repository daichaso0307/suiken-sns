<h1>新規投稿</h1>

<%= form_for @post do |f| %>
  <div class="field">
    <%= f.label :title %></br>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <%= f.label :content %></br>
    <%= f.text_area :content %>
  </div>
  <%= f.submit '投稿', class: 'button' %></br>
  <%= link_to '戻る', :back %>
<% end %>